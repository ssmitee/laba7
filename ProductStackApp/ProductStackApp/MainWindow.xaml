<Window x:Class="ProductStackApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление Товарным Стеком" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBlock Text="Наименование товара:" Margin="5"/>
            <TextBox x:Name="ProductNameTextBox" Margin="5"/>
            <TextBlock Text="Цена товара:" Margin="5"/>
            <TextBox x:Name="ProductPriceTextBox" Margin="5"/>
            <Button Content="Добавить товар" Click="AddProductButton_Click" Margin="5"/>
            <Button Content="Показать товары и среднюю цену" Click="DisplayProductsButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>